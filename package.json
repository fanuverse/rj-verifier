{
  "name": "rj_verifier",
  "version": "1.0.0",
  "description": "",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:3000 && cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "build": "vite build",
    "dist": "vite build && electron-builder",
    "start": "vite build && electron .",
    "compile-engine": "python engine/build_engine.py"
  },
  "keywords": [],
  "author": "Riiicil",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "vite": "^7.2.7",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.riiicil.verifier",
    "productName": "RJ Verifier",
    "directories": {
      "output": "dist_electron"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon1.ico"
    },
    "nsis": {
      "artifactName": "Setup.exe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "engine/dist/rj_engine.exe",
        "to": "engine/rj_engine.exe"
      },
      {
        "from": "engine/assets",
        "to": "engine/assets"
      }
    ]
  }
}